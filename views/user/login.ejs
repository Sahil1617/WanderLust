<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-3">Login to Wanderlust</h1>
    <div class="col-6 offset-3">
        <form  method="POST" action="/login">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" placeholder="Enter Username" class="form-control" type="text" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" placeholder="Enter Password" class="form-control" type="password" required>
            </div>
            <button class="btn btn-outline-danger">Login</button>
        </form>
    </div>
</div>

